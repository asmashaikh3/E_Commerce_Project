<div class="container mx-auto mt-4 max-w-md">
  <h1 class="text-2xl font-bold mb-4 text-center">Sign Up</h1>

  <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
    <div class="bg-white shadow-md rounded-lg p-4">
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded p-2 w-full" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "border rounded p-2 w-full" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded p-2 w-full" %>
      </div>

      <div>
        <%= f.submit "Sign Up", class: "bg-blue-500 text-white px-4 py-2 rounded w-full" %>
      </div>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
