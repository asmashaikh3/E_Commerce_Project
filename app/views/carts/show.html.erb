<% if @cart.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <% @cart.each do |product_id, quantity| %>
    <% product = Product.find_by(id: product_id) %>
    <% if product %>
      <div class="cart-item">
        <p><%= product.product_name %> - <%= number_to_currency(product.price) %> (Quantity: <%= quantity %>)</p>

        <%= form_with url: update_item_cart_path(product_id: product.id), method: :patch, local: true, class: "flex items-center" do %>
          <%= number_field_tag :quantity, quantity, min: 1, class: "border rounded p-1 w-16 mr-2" %>
          <%= submit_tag 'Update', class: "bg-blue-500 text-white px-3 py-1 rounded" %>
        <% end %>

        <%= form_with url: remove_item_cart_path(product_id: product.id), method: :delete, local: true, class: "inline-block" do %>
          <%= submit_tag 'Remove', class: "bg-red-500 text-white px-3 py-1 rounded ml-4" %>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
