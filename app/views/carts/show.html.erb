<h1>Your Shopping Cart</h1>

<% if @cart.items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @cart.products.each do |product| %>
      <li class="mb-2">
        <%= product.product_name %> - <%= number_to_currency(product.price) %>
        <%= link_to 'Remove', remove_from_cart_path(product), method: :delete, class: "bg-red-500 text-white px-2 py-1 rounded ml-2" %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Clear Cart', clear_cart_path, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded mt-4" %>
<% end %>
