<div class="container mx-auto mt-4">
  <h1 class="text-2xl font-bold mb-4"><%= @product.product_name %></h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: 'w-64 h-64 object-contain mx-auto' %>
    <% else %>
      <%= image_tag 'placeholder.png', class: 'w-64 h-64 object-contain mx-auto' %>
    <% end %>
    <div class="p-4">
      <p class="text-gray-700 mb-2"><%= @product.description %></p>
      <p class="text-green-600 font-bold mb-2">$<%= @product.price %></p>
      <p class="text-gray-700 mb-2"><strong>Stock Quantity:</strong> <%= @product.stock_quantity %></p>
      <p class="text-gray-700 mb-2"><strong>Category:</strong> <%= @product.category.category_name %></p>
      <%= link_to 'Add to Cart', add_to_cart_path(@product), method: :post, class: "bg-blue-500 text-white px-4 py-2 rounded mt-4" %>
    </div>
  </div>
</div>
